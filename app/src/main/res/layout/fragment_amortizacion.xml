<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AmortizacionFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amortización"
            android:fontFamily="@font/poppins_normal"
            android:textSize="36dp"
            android:background="@drawable/app_background"
            android:textColor="@color/white"
            android:paddingTop="40dp"
            android:paddingBottom="50dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:id="@+id/deudas_titulo"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-45dp"
            android:background="@drawable/app_blank_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:text="Calculadora"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/main"
                android:textSize="24dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ic_credito"
                android:src="@drawable/ic_credito"
                android:layout_marginStart="20dp"
                android:layout_marginTop="90dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/poppins_normal"
                android:text="Crédito"
                android:textColor="@color/main"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/txt_credito"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_background"
                android:fontFamily="@font/poppins_light"
                android:hint="Valor del crédito"
                android:inputType="number"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ic_banco"
                android:src="@drawable/ic_banco"
                android:layout_marginStart="20dp"
                android:layout_marginTop="190dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="190dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/poppins_normal"
                android:text="Entidad Bancaria"
                android:textColor="@color/main"
                android:textSize="14dp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="220dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/poppins_normal"
                android:background="@drawable/edit_text_background"/>

            <EditText
                android:id="@+id/txt_tasaInteres"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_background"
                android:fontFamily="@font/poppins_light"
                android:hint="Tasa de interés"
                android:inputType="numberDecimal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_below="@id/spinner"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ic_periodo"
                android:src="@drawable/ic_periodo"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/txt_tasaInteres"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/poppins_normal"
                android:text="Periodos"
                android:textColor="@color/main"
                android:textSize="14dp"
                android:layout_below="@id/txt_tasaInteres"/>

            <EditText
                android:id="@+id/txt_periodos"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_background"
                android:fontFamily="@font/poppins_light"
                android:hint="No. de Periodos"
                android:inputType="number"
                android:maxLength="4"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_below="@id/txt_tasaInteres"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ic_cuota"
                android:src="@drawable/ic_cuota"
                android:layout_marginStart="20dp"
                android:layout_marginTop="110dp"
                android:layout_below="@id/txt_tasaInteres"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="110dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/poppins_normal"
                android:text="Cuota"
                android:textColor="@color/main"
                android:textSize="14dp"
                android:layout_below="@id/txt_tasaInteres"/>

            <EditText
                android:id="@+id/txt_cuota"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="140dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_background"
                android:fontFamily="@font/poppins_light"
                android:hint="Cuota prevista"
                android:inputType="number"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_below="@id/txt_tasaInteres"/>

            <Button
                android:id="@+id/boton_amortizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="210dp"
                android:layout_marginEnd="20dp"
                android:height="60dp"
                android:background="@drawable/button_background_selector"
                android:fontFamily="@font/poppins_bold"
                android:text="AMORTIZAR"
                android:textColor="#fff"
                android:layout_below="@id/txt_tasaInteres"/>

            <FrameLayout
                android:id="@+id/frame_resumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                android:background="@drawable/edit_text_background"
                android:layout_below="@id/boton_amortizar"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_amortizacion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/main"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="16dp"
                            android:textAlignment="center"/>

                        <TextView
                            android:id="@+id/respuesta_amortizacion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#67032F"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="24dp"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:height="3dp"
                            android:background="@color/main"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Valor del crédito"
                            android:textColor="@color/main"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="16dp"
                            android:textAlignment="center"/>

                        <TextView
                            android:id="@+id/valor_credito"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="20dp"
                            android:textAlignment="center"/>

                    </LinearLayout>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:columnCount="2">

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Pago total"
                            android:textColor="@color/main"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="12dp"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Interés total"
                            android:textColor="@color/main"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="12dp"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/pago_total"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/main"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="18dp"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/interes_total"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/main"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="18dp"
                            android:textAlignment="center" />

                    </GridLayout>
                </LinearLayout>

            </FrameLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>







