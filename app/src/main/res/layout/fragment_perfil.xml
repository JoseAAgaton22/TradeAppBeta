<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PerfilFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:src="@drawable/img_encabezado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--ImageView
        android:id="@+id/circleImageView"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" /-->

    <de.hdodenhof.circleimageview.CircleImageView   android:id="@+id/foto_perfil"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_round"
        android:backgroundTint="#FFF"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="18dp"
        android:textColor="#FFF"
        app:layout_constraintTop_toBottomOf="@+id/foto_perfil"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/cuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_light"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/foto_perfil"
        tools:layout_editor_absoluteX="0dp"/>


    <ImageButton
        android:id="@+id/editar_perfil"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/button_round"
        android:backgroundTint="#FFF"
        android:src="@drawable/ic_edicion"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/id_usuario" />

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:columnCount="3"
        android:paddingStart="20dp"
        android:paddingTop="0dp"
        android:paddingEnd="20dp"
        android:paddingBottom="0dp"
        app:layout_constraintTop_toBottomOf="@+id/id_usuario"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/amigos"
            android:layout_width="108dp"
            android:layout_height="83dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:background="@drawable/user_background"
            android:elevation="5dp"
            android:fontFamily="@font/poppins_bold"
            android:hint="0"
            android:paddingStart="12dp"
            android:paddingTop="22dp"
            android:paddingEnd="12dp"
            android:textAlignment="center"
            android:textColor="@color/main"
            android:textColorHint="@color/main"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/seguidores"
            android:layout_width="108dp"
            android:layout_height="83dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:background="@drawable/user_background"
            android:elevation="5dp"
            android:fontFamily="@font/poppins_bold"
            android:paddingStart="12dp"
            android:paddingTop="22dp"
            android:paddingEnd="12dp"
            android:hint="0"
            android:textColorHint="@color/main"
            android:textAlignment="center"
            android:textColor="@color/main"
            android:textSize="24dp"
            tools:layout_editor_absoluteX="151dp"
            tools:layout_editor_absoluteY="365dp" />

        <TextView
            android:id="@+id/endeudamiento"
            android:layout_width="108dp"
            android:layout_height="83dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:background="@drawable/user_background"
            android:elevation="5dp"
            android:fontFamily="@font/poppins_bold"
            android:paddingStart="12dp"
            android:paddingTop="22dp"
            android:paddingEnd="12dp"
            android:text="12%"
            android:textAlignment="center"
            android:textColor="@color/main"
            android:textSize="24dp"
            tools:layout_editor_absoluteX="280dp"
            tools:layout_editor_absoluteY="365dp" />

        <TextView
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/poppins_light"
            android:text="Amigos"
            android:paddingStart="12dp"
            android:paddingTop="2dp"
            android:paddingEnd="12dp"
            android:textAlignment="center"
            android:textColor="@color/main"
            android:textSize="12dp" />

        <TextView
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/poppins_light"
            android:text="Seguidores"
            android:paddingStart="12dp"
            android:paddingTop="2dp"
            android:paddingEnd="12dp"
            android:textAlignment="center"
            android:textColor="@color/main"
            android:textSize="12dp" />

        <TextView
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/poppins_light"
            android:text="Ahorro"
            android:paddingStart="12dp"
            android:paddingTop="2dp"
            android:paddingEnd="12dp"
            android:textAlignment="center"
            android:textColor="@color/main"
            android:textSize="12dp" />

    </GridLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="20dp"
        android:background="#67032F"
        app:layout_constraintTop_toBottomOf="@+id/grid"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="0dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Información del usuario"
            android:textAlignment="center"
            android:textColor="@color/main"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/correo_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_light"
            android:text="jopenaa@unal.edu.co"
            android:textAlignment="center"
            android:textColor="@color/main"/>

        <TextView
            android:id="@+id/biografia_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/main"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CERRAR SESIÓN"
            android:background="@drawable/button_active_background"
            android:fontFamily="@font/poppins_bold"
            android:height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/boton_cerrar"
            android:layout_below="@id/biografia_user"
            android:layout_marginTop="10dp"
            android:textColor="#fff"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>