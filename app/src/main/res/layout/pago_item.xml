<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_blank_background"
    android:elevation="4dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:orientation="vertical"
            android:background="@drawable/circular_blank_background"
            android:layout_marginStart="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="@font/poppins_bold"
                android:id="@+id/numero"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:layout_marginBottom="-20dp"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tiempo"
                android:text="DÃ­as"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titulo del pago"
                android:id="@+id/titulo_pago"
                android:textColor="@color/main"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Valor del pago"
                android:textColor="@color/main"
                android:fontFamily="@font/poppins_normal"
                android:textSize="14dp"
                android:id="@+id/valor_pago"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@id/titulo_pago"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-02-02"
                android:textColor="@color/main"
                android:fontFamily="@font/poppins_light"
                android:textSize="14dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:id="@+id/fecha_de_vencimiento"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginEnd="20dp"
                android:paddingTop="4dp"
                android:id="@+id/boton_pp"
                android:text="pendiente"
                android:background="@drawable/estado_background"
                android:fontFamily="@font/poppins_light"
                android:textColor="#fff"
                android:layout_alignParentEnd="true"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_delete"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="20dp"
                android:id="@+id/eliminar"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>